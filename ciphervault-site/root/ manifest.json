    "display": "standalone",
    "display_override": ["window-controls-overlay", "standalone", "browser"],
    "background_color": "#050510",
    "theme_color": "#00d4ff",
    "orientation": "any",
    "scope": "/",
    "id": "/",
    "lang": "en",
    "dir": "ltr",
    "categories": ["security", "productivity", "utilities"],
