        }
    ],
    "screenshots": [
        {
            "src": "assets/screenshots/desktop-1280x720.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide",
            "label": "Desktop version of CipherVault Pro"
        },
        {
            "src": "assets/screenshots/mobile-750x1334.png",
            "sizes": "750x1334",
            "type": "image/png",
            "form_factor": "narrow",
            "label": "Mobile version of CipherVault Pro"
        },
        {
            "src": "assets/screenshots/tablet-1536x2048.png",
            "sizes": "1536x2048",
            "type": "image/png",
            "form_factor": "wide",
            "label": "Tablet version of CipherVault Pro"
        }
    ],
    "shortcuts": [
        {
            "name": "Encrypt File",
            "short_name": "Encrypt",
            "description": "Encrypt a new file with military-grade security",
            "url": "/#encrypt",
            "icons": [
                {
                    "src": "assets/icons/shortcut-encrypt.png",
                    "sizes": "96x96",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Decrypt File",
            "short_name": "Decrypt",
            "description": "Decrypt an existing encrypted file",
            "url": "/#decrypt",
            "icons": [
                {
                    "src": "assets/icons/shortcut-decrypt.png",
                    "sizes": "96x96",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Security Audit",
            "short_name": "Audit",
            "description": "View security audit and logs",
            "url": "/#audit",
            "icons": [
                {
                    "src": "assets/icons/shortcut-audit.png",
                    "sizes": "96x96",
                    "type": "image/png"
                }
            ]
        }
    ],
    "protocol_handlers": [
        {
            "protocol": "web+ciphervault",
            "url": "/open?file=%s"
        },
        {
            "protocol": "cvault",
            "url": "/open?file=%s"
        }
    ],
    "edge_side_panel": {
        "preferred_width": 480
    },
    "permissions": [
        "clipboard-write",
        "clipboard-read",
        "fileSystem",
        "fileSystem.write"
    ],
    "file_handlers": [
        {
            "action": "/",
            "accept": {
                "application/ciphervault": [".cvault", ".cvenc", ".cvmil"],
                "application/octet-stream": [".encrypted", ".secure"]
            },
            "icons": [
                {
                    "src": "assets/icons/file-cvault.png",
                    "sizes": "64x64"
                }
            ]
        }
    ],
    "launch_handler": {
        "client_mode": "focus-existing"
    },
    "handle_links": "preferred",
    "prefer_related_applications": false,
    "related_applications": [],
    "share_target": {
        "action": "/share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "name",
            "text": "description",
            "url": "link",
            "files": [
                {
                    "name": "encrypted_files",
                    "accept": ["application/ciphervault", "application/octet-stream"]
                }
            ]
        }
    },
    "capture_links": "none",
    "background": {
        "scripts": ["assets/js/background.js"],
        "type": "module"
    },
    "offline_enabled": true,
    "version": "4.1.0",
    "author": "CipherVault Security Team"
}
